{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "LocalSub",
	"version": "0.1.4",
	"identifier": "com.localsub.converter",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "LocalSub - 本地订阅转换器",
				"width": 900,
				"height": 580,
				"minWidth": 800,
				"minHeight": 500,
				"center": true,
				"resizable": true
			}
		],
		"security": {
			"csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self' data:; img-src 'self' data: https:; connect-src 'self' https:"
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
